{
  "compilerOptions": {
    "target": "esnext",
    "baseUrl": "./src",
    "jsx": "react",
    "paths": {
      "@components/*": ["./components/*"],
      "@hooks/*": ["./hooks/*"],
      "@utils/*": ["./utils/*"],
      "@services/*": ["./services/*"],
      "@assets/*": ["./assets/*"],
      "@pages/*": ["./pages/*"],
      "@contexts/*": ["./contexts/*"]
    }
  },
  "exclude": ["node_modules", "**/node_modules/*", "build"]
}
