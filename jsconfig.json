{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "baseUrl": "./src",
    "jsx": "react",
    "paths": {
      "@components/*": ["./components/*"],
      "@hooks/*": ["./hooks/*"],
      "@utils/*": ["./utils/*"],
      "@services/*": ["./services/*"],
      "@assets/*": ["./assets/*"],
      "@pages/*": ["./pages/*"],
      "@contexts/*": ["./contexts/*"],
      "@styles/*": ["./styles/*"],
      "@tests/*": ["./tests/*"]
    }
  },
  "exclude": ["node_modules", "**/node_modules/*", "build"]
}
